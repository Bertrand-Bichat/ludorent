<div class="container">
  <div class="d-flex justify-content-around border p-3 mb-3 bg-white">
    <div>
      <%= image_tag "uno.jpeg", alt: "Le Wagon", width: 200 %>
    </div>
    <div>
      <ul>
        <li>Nombre de joueurs : <%= @game.number_players %></li>
        <li>Âge minimum : <%= @game.age_limit %> ans</li>
        <li>Durée moyenne d'une partie : <%= @game.duration %> minutes</li>
        <li>Description : <%= @game.description %></li>
      </ul>
    </div>
  </div>
  <div class="bottom">
    <div class="border bg-white p-3">
      <div class="d-flex justify-content-between">
        <div class="title">
          <h1><%= @game.name %></h1>
        </div>
        <div class="d-flex align-item-center mt-3">
          <div>
            <%= image_tag "uno.jpeg", alt: "Le Wagon", width: 50, :class => "avatar" %>
          </div>
          <div>
            <h3><%= @user.first_name %> <%= @user.last_name %></h3>
          </div>
        </div>
      </div>
      <div class="mt-3">
        <h5><%= @game.price_per_day %> €/jour</h5>
      </div>
    </div>
    <div>
      <%= link_to "Louer", "#", class: "btn btn-gradient mt-3" %>
    </div>
  </div>
</div>
