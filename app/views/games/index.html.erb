<h1 class="h1-rental">Games for rental</h1>

<div class="main-container">
  <div class="games-container">
    <div class="container">
      <div class="row">
        <% @games.each do |game| %>
          <% if game.photo.attached? %>
            <%= cl_image_tag game.photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
          <div class="game-card-infos">
            <h2><%= link_to game.name, game_path(game), {:style=>'color:#EF629F;', :class => "css_class"} %></h2>
            <p><%= game.description %></p>
          </div>
          <h2 class="game-card-pricing"><%= game.price_per_day %>â‚¬</h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="game-card-user avatar-bordered" />
          <% end %>
        </div>
    </div>

    </div>
    <div id="map"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
