<div class="container">
  <div class="d-flex justify-content-around border mt-3 p-3 mb-3 bg-white">
    <div>
      <%= cl_image_tag @game.photo.key, height: 300, width: 400, crop: :fill %>
    </div>
    <div>
      <ul>
        <li>Nombre de joueurs : <%= @game.number_players %></li>
        <br>
        <li>Âge minimum : <%= @game.age_limit %> ans</li>
        <br>
        <li>Durée moyenne d'une partie : <%= @game.duration %> minutes</li>
        <br>
        <li>Description : <%= @game.description %></li>
      </ul>
    </div>
  </div>
  <div class="bottom">
    <div class="border bg-white p-3">
      <div class="d-flex justify-content-between">
        <div class="title">
          <h1><%= @game.name %></h1>
        </div>
        <div class="d-flex align-item-center mt-3">
          <div>
            <%= image_tag "uno.jpeg", alt: "Le Wagon", width: 50, :class => "avatar" %>
          </div>
          <div>
            <h2><%= @user.first_name %> <%= @user.last_name %></h2>
          </div>
        </div>
      </div>
      <div class="mt-3">
        <h3><%= @game.price_per_day %> €/jour</h3>
      </div>
    </div>
  </div>
  <h2>Sélectionner vos dates de location</h2>
  <div class="new_rental_form">

    <%= render 'form', rental: @rental %>

  </div>

</div>

