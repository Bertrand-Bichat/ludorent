<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <%= link_to "/", class: "navbar-brand" do %>
  <%= image_tag "ludinlogo.png", alt: "Le Wagon" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse align-self-center" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item " >
          <%= link_to "Games", games_path, class: "btn btn-nav mr-3" %>
        </li>
          <%= link_to "Messages", "#", class: "btn btn-nav mr-3" %>
        </li>
        <li class="nav-item dropdown align-self-center">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard",  dashboard_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item align-self-center">
         <%= link_to "Login", new_user_session_path, class: "btn btn-nav mr-3" %>
         <%= link_to "Register", new_user_registration_path, class: "btn btn-nav mr-3" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

